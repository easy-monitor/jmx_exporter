pkgname=jmx_exporter
pkgver=VERSION  # placeholder
pkgver() {
    # 工具名: 打包-基础包
    # http://admin.easyops.local/tool/19398c5d3c4df767914d654b83206ec4
    echo $_easyopsver | tr -cd '[[:alnum:]]._-'
}
pkgrel=1
arch=('x86_64')
options=('!strip')
source=()
projectdir=$(readlink -f "$startdir/../..")


package() {    
    ls ${projectdir}
    cp -rf ${projectdir}/jmx_prometheus_httpserver/target/jmx_prometheus_httpserver-*.jar "${pkgdir}"

    install -d "$pkgdir/conf"
    cp -f ${projectdir}/example_configs/httpserver_sample_config.yml "$pkgdir/conf"

    install -d "$pkgdir/deploy"
    install -m755 "$startdir/deploy/"* "$pkgdir/deploy"
}
